<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>RTF RPA</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark  " style="background-color: green;">
        <a class="navbar-brand" href="#">RTF</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item ">
              <a class="nav-link" href="/">Inicio <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/usuarios">Usuarios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link " href="/registro">Crear usuarios</a>
            </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/editar">Editar usuarios</a>
                </li>
          </ul> 
        </div>
      </nav>
    <h1 class="mt-5 mb-5 ml-5">Editar usuario</h1>
    <ul class="usuarios">
     
        <% for(let i = 0; i < results.length; i++) {%>
          <li class="usuario">
            
          <b>Nombre completo:</b> <span><%= results[i].nombre %></span>
            <span><%= results[i].apellidos %></span>
            <br>
            <span>Email:</span>  <small><%= results[i].email %></small>
            <br>
            <span>Documento:</span> <small><%= results[i].documento %></small>
            <br>
          </li>
        <% } %>
      </ul>
      <div class="container mr-5">
        <button id="update-button" class="btn btn-primary mr-5">Editar usuario</button>
       </div>
    <div class="container">
        <form action="/editar" method="PUT">
            <div class="form-group col-12 col-sm-6">
              <label for="InputName">Ingrese Nombre</label>
              <input type="text" class="form-control" id="InputName" placeholder="Nombre" name="nombre" required>
            </div>
            <div class="form-group col-12 col-sm-6">
              <label for="InpuApellido">Apellidos</label>
              <input type="text" class="form-control" id="InputApellido" placeholder="Apellidos" name="apellidos">
            </div>
            <div class="form-group col-12 col-sm-6">
                <label for="InputEmail">Email</label>
                <input type="email" class="form-control" id="InputEmail" placeholder="Email" name="email" required>
              </div>
              <div class="form-group col-12 col-sm-6">
                <label for="InputDocumento">Ingrese Documento</label>
                <input type="text" class="form-control" id="InputDocumento" placeholder="Documento identidad" name="documento" required>
              </div>
              <div class="form-group col-12 col-sm-6"> 
            <button type="submit" class="btn btn-primary">Submit</button>
            <a type="submit" href="/" class="btn btn-primary text-white">Salir</a>
            </div>
          </form>
    </div>
    
           
    <script src="./main.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>